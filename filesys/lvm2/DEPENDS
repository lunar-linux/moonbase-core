        "--with-libnvme" "--without-libnvme" \
        "for the NVME library support"

optional_depends libedit \
        "--enable-editline" "--disable-editline" \
        "for line edit thru libedit instead of readline (next option)" n

optional_depends readline \
        "--enable-readline" "--disable-readline" \
        "for line edit thru readline support"
