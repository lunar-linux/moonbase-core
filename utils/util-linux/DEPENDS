optional_depends python2 "--with-python=2" "" "for Python 2 support" n
optional_depends sqlite  "--enable-liblastlog2" "--disable-liblastlog2" \
        "to enable liblastlog2"

optional_depends Linux-PAM "" "" "for PAM support"
